# GPT-JobHunter Environment Configuration

# API Settings
API_TITLE="GPT-JobHunter API"
API_DESCRIPTION="AI-Powered Job Hunting Assistant API"
API_VERSION="1.0.0"
DEBUG=true

# Database Configuration
DATABASE_URL="postgresql+asyncpg://postgres:password@localhost:5432/jobhunter"
DATABASE_ECHO=false

# Security Settings
SECRET_KEY="your-super-secret-jwt-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4"

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"

# External API Keys
JOB_SEARCH_API_KEY="your-job-search-api-key"
LINKEDIN_API_KEY="your-linkedin-api-key"

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_FOLDER="./uploads"

# CORS Settings (comma-separated list)
CORS_ORIGINS="http://localhost:8501,http://127.0.0.1:8501"

# Frontend Configuration
API_BASE_URL="http://localhost:8000"

# Logging
LOG_LEVEL="INFO"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# Celery Configuration (for background tasks)
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"